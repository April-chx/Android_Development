<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/submit_reservation"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:layout_weight="0.56" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="18dp"
            android:background="@android:color/transparent"
            android:src="@drawable/backspace" />
 
        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:src="@drawable/home_icon2" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFFFF"
            android:text="@string/reservation" />
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageButton1"
            android:layout_below="@+id/imageButton2"
            android:layout_marginTop="15dp"
            android:text="@string/label1"
            android:textColor="#000000"
            android:textSize="15sp" />
        
        <TextView
            android:id="@+id/textView3"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/phone"
            android:layout_below="@+id/phoneText"
            android:layout_marginTop="32dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#0072E3"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginLeft="20dp"
            android:textColor="#7B7B7B"
            android:layout_toRightOf="@+id/textView3" />
        
       <TextView
           android:id="@+id/textView5"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/textView3"
           android:layout_below="@+id/textView3"
           android:layout_marginTop="13dp"
           android:textColor="#000000"
           android:textSize="16sp"
           android:textStyle="bold" />
        
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="39dp"
            android:text="@string/label2"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/seat1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageButton1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000" />
        
        <TextView
            android:id="@+id/seat2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/seat1"
            android:layout_alignBottom="@+id/seat1"
            android:layout_alignLeft="@+id/textView4"
            android:textColor="#000000"
            android:gravity="center_vertical|center_horizontal"/>

        <TextView
            android:id="@+id/seat3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/seat1"
            android:layout_below="@+id/seat1"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/seat4"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/seat3"
            android:layout_alignBottom="@+id/seat3"
            android:layout_alignLeft="@+id/seat2"
            android:textColor="#000000"
            android:gravity="center_vertical|center_horizontal"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="15dp"
            android:text="@string/name"
            android:textColor="#4F4F4F" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/name"
            android:layout_marginTop="20dp"
            android:text="@string/phone"
            android:textColor="#4F4F4F" />
        
        <EditText
            android:id="@+id/phoneText"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/nameText"
            android:layout_below="@+id/nameText"
            android:layout_marginTop="15dp"
            android:ems="10" 
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#4F4F4F"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:ems="10"
            android:textSize="13sp" >
            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button1"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="18dp"
            android:background="#FF9900"
            android:text="@string/reservation2"
            android:textColor="#FFFFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignLeft="@+id/textView7"
            android:text="@string/total_price"
            android:textColor="#000000"
            android:textSize="13sp" />
        
        <TextView
            android:id="@+id/test"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_toRightOf="@+id/textView8"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FF9900"
            android:textStyle="bold" />

</RelativeLayout>
</LinearLayout>
